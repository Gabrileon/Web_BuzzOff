<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BuzzOff</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BuzzOff.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="">

        @RenderBody()
        <main role="main" class="pb-3">
            <header>
                <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-transparent border-bottom box-shadow">
                    <div class="container-fluid">
                        <div class="d-flex h-100">
                            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                                <img src="~/img/BuzzOffImageLogo.svg" />
                            </a>
                            <h1 class="message">Denuncie!</></h1>

                        </div>
                        <div>
                            <div class="">
                                <ul class="navbar-nav flex-grow-1">
                                    <li class="nav-item mx-3">
                                        <a class="btn btn-success" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                                    </li>
                                    <li class="nav-item mx-3">
                                        <a class="btn btn-success" asp-area="" asp-controller="" asp-action="">Fale conosco</a>
                                    </li>
                                    <li class="nav-item mx-3">
                                        <a class="btn btn-success" asp-area="" asp-controller="Denouncement" asp-action="Index">Denúncias</a>
                                    </li>
                                    <li class="nav-item mx-3">
                                        <a class="btn btn-success" asp-area="" asp-controller="" asp-action="">Mapa de focos</a>
                                    </li>
                                    <li class="nav-item mx-3">
                                        <a class="btn btn-success" asp-area="" asp-controller="Login" asp-action="Index">Acesse sua conta</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </nav>
            </header>
        </main>
    </div>

    <footer class="border-top footer text-muted bg-black">
        <div class="container">
            &copy; 2023 - BuzzOff - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
