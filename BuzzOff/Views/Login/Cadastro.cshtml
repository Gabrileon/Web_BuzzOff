@model UserModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutCadastro.cshtml";
}

<div class="geral">
    <div class="bloco-cadastro"></div>
    <img class="bg-cadastro" src="/img/cadastro.svg">
    <form class="form-cadastro" asp-controller="Login" asp-action="Add" method="post">
        <div class="cadastro-form">
            <fieldset>
                <h3 class="txtCadastro">CRIE SUA CONTA</h3>
                <input type="text" id="nome" class="form-control" asp-for="Name" placeholder="Nome" required />
                <input type="password" id="password" class="form-control" asp-for="Password" placeholder="Senha" required />
                <input type="email" id="email" class="form-control" asp-for="Email" placeholder="Email" required />
                <input type="text" id="CPF" class="form-control" asp-for="CPF" placeholder="CPF" required />
                <br>
                <button type="submit" class="btn btn-success" onclick="alert('teste123')">Cadastrar</button>
            </fieldset>
        </div>

    </form>
</div>
