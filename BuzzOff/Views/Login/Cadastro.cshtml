@model UserModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="geral">
    <img class="bg-login" src="/img/imgCadastro.svg">
    <form class="form-login" asp-controller="Login" asp-action="Add" method="post">
        <div class="login-form">
            <fieldset>
                <h3 class="txtLogin">CRIE SUA CONTA</h3>
                <input type="text" id="nome" class="form-control" asp-for="Name" placeholder="Nome" required />
                <input type="password" id="password" class="form-control" asp-for="Password" placeholder="Senha" required />
                <input type="email" id="email" class="form-control" asp-for="Email" placeholder="Email" required />
                <input type="text" id="CPF" class="form-control" asp-for="CPF" placeholder="CPF" required />
                <br>
                <button type="submit" class="btn btn-success">Cadastrar</button>
            </fieldset>
        </div>

    </form>
</div>
