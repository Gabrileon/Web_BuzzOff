@model UserModel
@{
    ViewData["Title"] = "Alterar a senha";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="geral">
    <img class="bg-login" src="/img/update_password.svg">
    <form class="form-login" asp-controller="User" asp-action="UpdatePassword" method="post">
        <div class="login-form">
            <fieldset>
                <h3 class="txtLogin">ALTERE SUA SENHA</h3>

                <input type="text" id="nome" class="form-control" placeholder="CPF" name="cpf" required />

                <input type="text" id="nome" class="form-control" placeholder="Nome completo" name="name" required />

                <input type="password" id="password" class="form-control" placeholder="Nova senha" name="newPassword" required />

                <br>
                <div asp-validation-summary="All" class="text-danger"></div>
                <button class="btn btn-success" type="submit">Alterar</button>
            </fieldset>
        </div>
    </form>
</div>
