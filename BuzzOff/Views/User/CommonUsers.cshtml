@model UsersModel
@{
    ViewData["Title"] = "Opções";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Nome</th>
                <th>CPF</th>
                <th>Email</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td>@user.Name</td>
                    <td>@user.CPF</td>
                    <td>@user.Email</td>
                    <td>
                        <a type="button" class="btn btn-danger" asp-controller="User" asp-action="UpdateAccessLevel" asp-route-id="@user.Id">Dar Permissão</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


