@model UserModel
@{
    ViewData["Title"] = "Alterar seus dados";
    Layout = "~/Views/Shared/_LayoutCadastro.cshtml";
}

<div class="geral">
    <div class="bloco-cadastro"></div>
    <img class="bg-cadastro" src="/img/cadastro.svg">
    <form class="form-cadastro" asp-controller="User" asp-action="Update" method="post">
        <div class="cadastro-form">
            <fieldset>
                <h3 class="txtCadastro">ALTERE SUA CONTA</h3>
                <input type="text" id="nome" class="form-control" asp-for="Name" placeholder="Nome" required />
                <input type="password" id="password" class="form-control" asp-for="Password" placeholder="Senha" value="@Model.Password" required />
                <input type="email" id="email" class="form-control" asp-for="Email" placeholder="Email" value="@Model.Email" required />
                <input type="text" id="CPF" class="form-control" asp-for="CPF" placeholder="CPF" value="@Model.CPF" readonly required />
                <br>
                <button type="submit" class="btn btn-success">Salvar alterações</button>
                <button class="btn btn-success" asp-controller="Home" asp-action="Index">Cancelar</button>
            </fieldset>
        </div>

    </form>
</div>
