@model DenunciationAddressModel
@{
    ViewData["Title"] = "Cadastro denuncias";
    Layout = "~/Views/Shared/_LayoutDenunciation.cshtml";
}

<div class="d-flex flex-row">
    <div class="left-side">
        <div class="header">
        </div>
        <div class="form">
            <form method="POST" asp-controller="Denunciation" asp-action="Add">
                <div class="container">
                    <div class="row">
                        <div class="col">
                            <div class="container">
                                <div class="row">
                                    <div class="col">
                                        <div class="d-flex flex-column mx-3">
                                            <label for="street">Logradouro</label>
                                            <input type="text" id="street" asp-for="Address.Street" />
                                        </div>
                                    </div>
                                    <div class="col">
                                        <div class="d-flex flex-column mx-3">
                                            <label for="number">Número</label>
                                            <input type="text" id="number" asp-for="Address.Number" />
                                        </div>
                                    </div>
                                    <div class="col">
                                        <div class="d-flex flex-column mx-3">
                                            <label for="neighborhood">Bairro</label>
                                            <input type="text" id="neighborhood" asp-for="Address.Neighborhood" />
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col">
                                        <div class="d-flex flex-column mx-3">
                                            <label for="reference">Referência (opcional)</label>
                                            <input type="text" id="reference" asp-for="Address.Reference" />
                                        </div>
                                    </div>
                                    <div class="col">
                                        <div class="d-flex flex-column mx-3">
                                            <label for="city">Cidade</label>
                                            <input type="text" id="city" asp-for="Address.City" />
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col">
                                        <div class="d-flex flex-column mx-3">
                                            <label for="comment">Comentário (opcional)</label>
                                            <input type="text" asp-for="Denunciation.Comment" id="comment" />
                                        </div>
                                    </div>
                                    <div class="col">
                                        <div class="d-flex flex-column mx-3 ">
                                            <label for="focusType">Tipo da denúncia</label>
                                            <select asp-for="Denunciation.FocusType" id="focusType">
                                                <option value="1">Ovos</option>
                                                <option value="2">Larvas</option>
                                                <option value="3">Adultos</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col">
                            <input asp-for="Denunciation.media" type="file" id="uploadFoto" style="display: none;" accept="image/*" onchange="previewFoto()" />
                            <div class="form-group">
                                <label for="uploadFoto" style="cursor: pointer;">
                                    <div id="fotoPreview" class="border bg-light" style="width: 12rem; height: 12rem;">
                                        <img id="fotoDisplay" style="width: 12rem; height: 12rem;" src="/img/userIcon.svg" alt="Foto do usuário" class="img-fluid">
                                    </div>
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="right-side">
        <img src="~/img/sidebar.svg" alt="side bar" />
    </div>
</div>



